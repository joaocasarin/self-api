    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug - Test",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/app.js",
            "outFiles": ["${workspaceFolder}/**/*.js"],
            "stopOnEntry": false,
            "args": [],
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": null,
            "runtimeArgs": [
                "--nolazy"
            ],
            "env": {
                "NODE_ENV": "development",
                "PORT": "3000"
            },
            "console": "integratedTerminal",
            "sourceMaps": true,
            "protocol": "inspector",
            "smartStep": true
        },
    ]
}